# Application
PROJECT_NAME="Faithful Finances API"
VERSION="1.0.0"
DEBUG=false
SECRET_KEY="your-super-secret-key-here-replace-in-production"
ENCRYPTION_KEY="your-encryption-key-for-tenant-tokens-32-chars"

# Server
HOST="0.0.0.0"
PORT=8000
RELOAD=false

# Auth0 Configuration
AUTH0_DOMAIN="your-domain.auth0.com"
AUTH0_AUDIENCE="https://api.faithfulfinances.com"
AUTH0_CLIENT_ID="your-auth0-client-id"
AUTH0_CLIENT_SECRET="your-auth0-client-secret"

# Global Database (Tenant Registry)
GLOBAL_DATABASE_URL="libsql://global-registry.turso.io"
GLOBAL_AUTH_TOKEN="your-global-db-auth-token"
DATABASE_ECHO=false

# Tenant Resolution
DEFAULT_TENANT_RESOLVER="composite"
TENANT_HEADER_NAME="X-Tenant-ID"

# Multi-tenancy Settings
MAX_TENANTS_PER_USER=5
TENANT_SLUG_MIN_LENGTH=3
TENANT_SLUG_MAX_LENGTH=50

# CORS Configuration
CORS_ALLOW_ORIGINS="http://localhost:3000,https://*.faithfulfinances.com"
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Plaid Configuration
PLAID_CLIENT_ID="your-plaid-client-id"
PLAID_SECRET="your-plaid-secret-key"
PLAID_ENV="sandbox"
PLAID_PRODUCTS="transactions,accounts,identity"
PLAID_COUNTRY_CODES="US"

# Stripe Configuration
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Redis (for caching and rate limiting)
REDIS_URL="redis://localhost:6379"

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Monitoring
SENTRY_DSN=""
PROMETHEUS_METRICS_ENABLED=true

# Email (for notifications)
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_USE_TLS=true

# File Storage
STORAGE_PROVIDER="local"
STORAGE_PATH="./uploads"

# Background Tasks
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"