{
  "project": "Faithful Finances Frontend",
  "version": "1.0.0",
  "description": "Quality standards configuration for development team",
  
  "typescript_config": {
    "strict_mode": true,
    "target": "ES2022",
    "module": "ESNext",
    "required_options": {
      "strict": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noUncheckedIndexedAccess": true,
      "exactOptionalPropertyTypes": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    }
  },

  "eslint_config": {
    "extends": [
      "@typescript-eslint/recommended",
      "@typescript-eslint/recommended-requiring-type-checking",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "error",
      "@typescript-eslint/prefer-nullish-coalescing": "error",
      "@typescript-eslint/prefer-optional-chain": "error",
      "jsx-a11y/no-autofocus": "error",
      "jsx-a11y/no-distracting-elements": "error",
      "react/prop-types": "off",
      "react/react-in-jsx-scope": "off"
    }
  },

  "testing_requirements": {
    "unit_test_coverage": {
      "minimum": 90,
      "critical_functions": 100,
      "branches": 85,
      "lines": 90
    },
    "testing_tools": {
      "unit": "Jest + Testing Library",
      "integration": "Jest + MSW",
      "e2e": "Playwright",
      "accessibility": "axe-core + Pa11y",
      "visual": "Percy/Chromatic",
      "performance": "Lighthouse CI"
    }
  },

  "performance_budgets": {
    "bundle_sizes": {
      "initial_load": "500KB",
      "route_chunks": "200KB",
      "vendor_chunk": "300KB",
      "images": "100KB per image",
      "fonts": "50KB total"
    },
    "core_web_vitals": {
      "lcp_target": "2.5s",
      "fid_target": "100ms",
      "cls_target": "0.1"
    },
    "persona_specific_targets": {
      "pre_teen": {
        "fcp": "1800ms",
        "lcp": "2500ms",
        "tti": "3000ms"
      },
      "teen": {
        "fcp": "1500ms",
        "lcp": "2000ms",
        "tti": "2500ms"
      },
      "college_student": {
        "fcp": "1200ms",
        "lcp": "1800ms",
        "tti": "2000ms"
      },
      "single_adult": {
        "fcp": "1000ms",
        "lcp": "1500ms",
        "tti": "1800ms"
      },
      "married_couple": {
        "fcp": "1000ms",
        "lcp": "1500ms",
        "tti": "1800ms"
      },
      "single_parent": {
        "fcp": "800ms",
        "lcp": "1200ms",
        "tti": "1500ms"
      },
      "two_parent_family": {
        "fcp": "1000ms",
        "lcp": "1500ms",
        "tti": "1800ms"
      },
      "fixed_income": {
        "fcp": "2000ms",
        "lcp": "3000ms",
        "tti": "4000ms"
      }
    }
  },

  "accessibility_standards": {
    "wcag_level": "AA",
    "target_level": "AAA for fixed_income persona",
    "contrast_ratios": {
      "normal_text": "4.5:1",
      "large_text": "3:1",
      "fixed_income_persona": "7:1"
    },
    "touch_targets": "44x44px minimum",
    "keyboard_navigation": "required",
    "screen_reader_support": "required"
  },

  "security_requirements": {
    "encryption": {
      "data_at_rest": "AES-256",
      "data_in_transit": "TLS 1.3"
    },
    "authentication": {
      "mfa_required": true,
      "session_timeout": "15 minutes",
      "password_strength": "high"
    },
    "compliance": [
      "PCI DSS Level 1",
      "GDPR",
      "CCPA",
      "COPPA"
    ]
  },

  "browser_support": {
    "desktop": {
      "chrome": "latest 3 versions",
      "safari": "latest 2 versions",
      "firefox": "latest 3 versions",
      "edge": "latest 2 versions"
    },
    "mobile": {
      "ios_safari": "iOS 13+",
      "chrome_android": "Android 8+",
      "samsung_internet": "latest 2 versions"
    }
  },

  "code_quality_metrics": {
    "cyclomatic_complexity": 10,
    "max_function_length": 50,
    "max_file_length": 500,
    "duplicate_code_threshold": "3%"
  },

  "git_workflow": {
    "pre_commit_hooks": [
      "lint",
      "type-check",
      "test",
      "accessibility-check"
    ],
    "pr_requirements": [
      "tests_passing",
      "code_review_approved",
      "accessibility_verified",
      "performance_budget_met"
    ]
  },

  "monitoring_and_alerting": {
    "error_tracking": "required",
    "performance_monitoring": "required",
    "accessibility_monitoring": "required",
    "security_monitoring": "required"
  },

  "documentation_requirements": {
    "component_documentation": "Storybook required",
    "api_documentation": "OpenAPI/Swagger",
    "accessibility_documentation": "required",
    "testing_documentation": "required"
  },

  "deployment_quality_gates": {
    "automated_tests": "100% pass rate",
    "security_scan": "no high/critical issues",
    "accessibility_scan": "WCAG AA compliance",
    "performance_test": "meets budget requirements",
    "code_review": "approved by 2+ reviewers"
  }
}